<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/EffectsContainer"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.android.gallery3d.photoeditor.actions.FillLightAction style="@style/Effect">
        <ImageView android:src="@drawable/photoeditor_effect_filllight" style="@style/EffectIcon" />
        <TextView android:id="@id/effect_label" android:text="@string/filllight" style="@style/EffectLabel" />
    </com.android.gallery3d.photoeditor.actions.FillLightAction>
    <com.android.gallery3d.photoeditor.actions.HighlightAction style="@style/Effect">
        <ImageView android:src="@drawable/photoeditor_effect_highlight" style="@style/EffectIcon" />
        <TextView android:id="@id/effect_label" android:text="@string/highlight" style="@style/EffectLabel" />
    </com.android.gallery3d.photoeditor.actions.HighlightAction>
    <com.android.gallery3d.photoeditor.actions.ShadowAction style="@style/Effect">
        <ImageView android:src="@drawable/photoeditor_effect_shadow" style="@style/EffectIcon" />
        <TextView android:id="@id/effect_label" android:text="@string/shadow" style="@style/EffectLabel" />
    </com.android.gallery3d.photoeditor.actions.ShadowAction>
    <com.android.gallery3d.photoeditor.actions.AutoFixAction style="@style/Effect">
        <ImageView android:src="@drawable/photoeditor_effect_autofix" style="@style/EffectIcon" />
        <TextView android:id="@id/effect_label" android:text="@string/autofix" style="@style/EffectLabel" />
    </com.android.gallery3d.photoeditor.actions.AutoFixAction>
</LinearLayout>
